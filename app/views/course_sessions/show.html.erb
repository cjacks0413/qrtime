<p id="notice"><%= notice %></p>

<p>
  <b>Course:</b>
  <%= @course_session.course.name %>
</p>

<p>
  <b>Date:</b>
  <%= @course_session.date %>
</p>

<p>
  <b>Description:</b>
  <%= @course_session.description %>
</p>

<p>
  <b>Start time:</b>
  <%= @course_session.start_time.strftime("%I:%M:%S") %>
</p>

<p>
  <b>End time:</b>
  <%= @course_session.end_time.strftime("%I:%M:%S")  %>
</p>

<p>
  <b>Check In URL:</b>
  <%= @course_session.check_in_url %>
</p>

<p>
  <b>Check Out URL:</b>
  <%= @course_session.check_out_url %>
</p>


<table cellpadding=40>
  <tr><th>Check in QR:</th><th>Check Out QR:</th></tr>
  <tr>
      <td><%= link_to (image_tag(course_session_check_in_url(@course_session, :format => :svg))),
                      course_session_check_in_url(@course_session)%></td>
  </tr>
</table>

<a href="#" id="show_whatever">Show Student Activity</a>
<div id="whatever" style="display:none">
  <table border="1">
    <tr>
      <th>Student</th>
      <th>Check-In</th>
      <th>Check-Out</th>
      <th>% Attended</th>

    </tr>
     <% if @users.length != 0 %>
        <% @users.each do |u| %>
            <% sa = u.student_activities.all(:conditions => ["course_session_id = ?", @course_session.id, ]) %>
            <% if sa.length == 0 %>
                <tr class = "absent">
                <% pa = 0 %>
            <% elsif sa.length == 1 %>
                <tr class = "late">
                <% pa = "n/a" %>
            <% else %>
                <% classlength = @course_session.end_time - @course_session.start_time %>
                <% inclass = sa.last.time - sa.first.time %>
                <% pa = ((inclass/classlength).round(2))*100 %>
                <% if pa>100 %>
                    <% pa = 100 %>
                <% end %>
                <% if inclass < classlength && (classlength-inclass) > 5 %>
                    <tr class = "late">
                <% else %>
                    <tr class = "present">
                <% end %>
            <% end %>

            <td><%= u.name %></td>
            <% if sa.length > 0 %>
                <td><%= sa.first.time.strftime("%I:%M:%S") %></td>
            <% else %>
                <td></td>
                <td></td>
            <% end %>
            <% if sa.length > 1 %>
                <td><%= sa.last.time.strftime("%I:%M:%S") %></td>
            <% elsif sa.length == 1 %>
            <td></td>
            <% end %>
            <td><%= pa %></td>
            </tr>

        <% end %>
    <% end %>
  </table>


</div>


<br><br>
