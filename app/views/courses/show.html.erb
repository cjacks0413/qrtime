<p id="notice"><%= notice %></p>


<%= link_to "Download Course Data", {:controller => "courses", :action => "show", :id => @course, :format => "csv"}, {:class => 'databutton'} %>

<p>
  <b>Name:</b>
  <%= @course.name %>
</p>

<p>
  <b>Instructor:</b>
  <%=@course.instructor %> 
</p>

<p>

    <table border="1">
      <tr>
        <th>Course Session</th>
        <th>Date</th>
        <th>Start Time</th>
        <th>End Time</th>

      </tr>
      <% count = 1 %>
  <% @course_sessions.each do |course_session| %>


      <tr>
        <td><%= link_to(count, course_session) %></td>
        <td><%= course_session.date %></td>
        <td><%= course_session.start_time.strftime("%I:%M:%S") %></td>
        <td><%= course_session.end_time.strftime("%I:%M:%S") %></td>
      </tr>
        <% count = count+1  %>

  <% end %>
    </table>
</p>

<%= link_to 'New Course session', new_course_session_path %>

<br><br>

<p>
  <b>Students Enrolled:</b> <br>
  <% @users.each do |u|%>
     <%= link_to u.name, u %><br>
  <% end %>
</p>



