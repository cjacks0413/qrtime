<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%=  f.input :instructor %>
    <%= f.association :users, label: "Add Students", collection: (User.with_role :student), as: :check_boxes %> 
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
